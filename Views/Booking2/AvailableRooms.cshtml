@model Hotel9.Controllers.Booking2Controller.AvailableRoomsModel


@{
    ViewData["Title"] = "AvailableRooms";
}

<h1>Available rooms</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rooms[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rooms[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Rooms) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
                <td>  <a asp-action="Book" asp-route-Roomid="@item.Id" asp-route-Booking2id="@Model.BookingId">Book</a> </td>
        </tr>
}
        <tr>
            <td>RoomCount: </td>
            <td> @Model.Rooms.Count() </td>
        </tr>
    </tbody>
</table>
